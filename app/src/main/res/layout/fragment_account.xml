<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <!-- TODO: Update blank fragment layout -->
        <TextView
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:text="@string/hello_blank_fragment"
                android:id="@+id/accountTextView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recordTextView" android:textSize="18sp"
                android:textAlignment="center" android:visibility="invisible"/>
        <TextView
                android:text="Consumption record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recordTextView" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/accountTextView"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="350dp"
                android:layout_height="400dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recordTextView" android:id="@+id/recyclerView"/>

    </android.support.constraint.ConstraintLayout>
</layout>